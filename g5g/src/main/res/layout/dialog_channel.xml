<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/app_padding_m"
    android:background="@drawable/bg_popup_radius"
    android:orientation="vertical"
    tools:context="cn.com.lightech.led_g5g.view.console.impl.ManualFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_popup_title_top_radius"
        android:gravity="center_vertical"
        android:minHeight="@dimen/app_item_hight"
        android:paddingLeft="@dimen/app_padding_l"
        android:text="@string/led_chanel"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/sb_gray"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="vertical"
        android:paddingLeft="@dimen/app_margin_m"
        android:paddingRight="@dimen/app_margin_m">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/ch_B"
                android:textColor="@color/ch_color_blue" />

            <SeekBar
                android:id="@+id/seekBar_blue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:indeterminate="false"
                android:progress="50"
                android:progressDrawable="@drawable/seekbar_progress_blue" />

            <TextView
                android:id="@+id/tv_value_sb_blue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:text="50"
                android:textColor="@color/ch_color_blue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/ch_W"
                android:textColor="@color/ch_color_white" />

            <SeekBar
                android:id="@+id/seekBar_white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:indeterminate="false"
                android:progress="50"
                android:progressDrawable="@drawable/seekbar_progress_white" />

            <TextView
                android:id="@+id/tv_value_sb_white"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:text="50"
                android:textColor="@color/ch_color_white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/ch_P"
                android:textColor="@color/ch_color_purple" />

            <SeekBar
                android:id="@+id/seekBar_purple"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:indeterminate="false"
                android:progress="50"
                android:progressDrawable="@drawable/seekbar_progress_purple" />

            <TextView
                android:id="@+id/tv_value_sb_purple"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:text="50"
                android:textColor="@color/ch_color_purple" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/ch_G"
                android:textColor="@color/ch_color_green" />

            <SeekBar
                android:id="@+id/seekBar_green"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:indeterminate="false"
                android:progress="50"
                android:progressDrawable="@drawable/seekbar_progress_green" />

            <TextView
                android:id="@+id/tv_value_sb_green"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:text="50"
                android:textColor="@color/ch_color_green" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/ch_R"
                android:textColor="@color/ch_color_red" />

            <SeekBar
                android:id="@+id/seekBar_red"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:indeterminate="false"
                android:progress="50"
                android:progressDrawable="@drawable/seekbar_progress_red" />

            <TextView
                android:id="@+id/tv_value_sb_red"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:text="50"
                android:textColor="@color/ch_color_red" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/sb_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tv_btn_ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/btn_radius_leftbottom"
            android:gravity="center"
            android:minHeight="@dimen/app_item_hight"
            android:padding="0dp"
            android:text="@string/device_wifi_dialog_button_ok" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/app_item_hight"
            android:background="@color/sb_gray" />

        <Button
            android:id="@+id/tv_btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/btn_radius_rightbottom"
            android:gravity="center"
            android:minHeight="@dimen/app_item_hight"
            android:padding="0dp"
            android:text="@string/device_wifi_dialog_button_cancel" />
    </LinearLayout>

</LinearLayout>
