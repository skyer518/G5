<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/app_item_hight"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/app_padding_m"
    android:paddingRight="@dimen/app_padding_m">

    <ImageView
        android:id="@+id/iv_devicePic"
        android:layout_width="@dimen/item_image_size"
        android:layout_height="@dimen/item_image_size"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/app_margin_xl"
        android:layout_marginRight="@dimen/app_margin_m"
        android:src="@mipmap/led" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_deviceNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_deviceip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>