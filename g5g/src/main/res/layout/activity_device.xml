<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_device_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_device_main"
    android:orientation="horizontal"
    tools:context=".view.Other.impl.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <cn.com.lightech.led_g5g.wedgit.RoundImageView
            android:id="@+id/iv_custPic"
            android:layout_width="@dimen/userPhoto_size"
            android:layout_height="@dimen/userPhoto_size"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_head"
            zhy:borderRadius="10dp"
            zhy:type="round" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/company"
            android:textSize="@dimen/app_text_size_m"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/company_info" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/app_margin_m"
        android:layout_weight="2" />
    <!--<fragment-->
    <!--android:id="@+id/fragment"-->
    <!--android:name="cn.com.lightech.led_g5g.view.device.impl.ExpDeviceGroupFragment"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_margin="@dimen/app_margin_m"-->
    <!--android:layout_weight="2"-->
    <!--tools:layout="@layout/fragment_device_group_explv" />-->


</LinearLayout>
