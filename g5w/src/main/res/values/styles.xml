<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light">

    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowAnimationStyle">@style/ActivitySwitchAnimation</item>
        <item name="android:actionBarStyle">@style/myActionBarStyle</item>
        <item name="android:popupWindowStyle">@style/popup_window</item>
        <!--<item name="android:background">@mipmap/bg_control</item>-->
        <!--<item name="android:alertDialogTheme">@style/dialog</item>-->
        <!--<item name="android:preferenceStyle">@style/my_preference_activity_style</item>-->

    </style>

    <style name="noneHomeAsUpIndicatorStyle" parent="AppTheme">
        <item name="android:homeAsUpIndicator">@drawable/bg_none</item>
    </style>

    <style name="myActionBarStyle" parent="android:Widget.ActionBar">
        <item name="android:background">@color/bgColor_titleBar</item>
        <item name="android:titleTextStyle">@style/AcBar_titleStyle</item>
        <!--<item name="android:textColor">#000000</item>-->
    </style>

    <style name="AcBar_titleStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#353c43</item>
    </style>
    <!--<style name="my_preference_activity_style" parent="@android:style/Preference.Holo">-->
    <!--<item name="android:background">#7f01bbff</item>-->
    <!--</style>-->

    <style name="my_actionbar_style" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/bgColor_titleBar</item>
        <item name="android:titleTextStyle">@style/AcBar_titleStyle</item>

    </style>

    <style name="ActivitySwitchAnimation" parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_activity_chang_in_from_right
        </item>
        <item name="android:activityOpenExitAnimation">@anim/anim_activity_chang_out_from_left
        </item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_activity_chang_in_from_left
        </item>
        <item name="android:activityCloseExitAnimation">@anim/anim_activity_chang_out_from_right
        </item>
    </style>

