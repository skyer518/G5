<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/app_padding_m"
    tools:context="cn.com.lightech.led_g5w.view.console.impl.ManualFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_panel_radius"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/ch_1"
                android:textColor="@color/ch_color_1"/>

            <SeekBar
                android:id="@+id/seekBar_blue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:indeterminate="false"
                android:progress="100"
                android:progressDrawable="@drawable/seekbar_progress_blue" />

            <TextView
                android:id="@+id/tv_value_sb_blue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:textColor="@color/ch_color_1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/ch_2"
                android:textColor="@color/ch_color_2"/>

            <SeekBar
                android:id="@+id/seekBar_white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:indeterminate="false"
                android:progress="100"
                android:progressDrawable="@drawable/seekbar_progress_white" />

            <TextView
                android:id="@+id/tv_value_sb_white"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:textColor="@color/ch_color_2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/ch_3"
                android:textColor="@color/ch_color_3"/>

            <SeekBar
                android:id="@+id/seekBar_purple"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:indeterminate="false"
                android:progress="100"
                android:progressDrawable="@drawable/seekbar_progress_purple" />

            <TextView
                android:id="@+id/tv_value_sb_purple"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:textColor="@color/ch_color_3"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/ch_4"
                android:textColor="@color/ch_color_4"/>

            <SeekBar
                android:id="@+id/seekBar_green"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:indeterminate="false"
                android:progress="100"
                android:progressDrawable="@drawable/seekbar_progress_green" />

            <TextView
                android:id="@+id/tv_value_sb_green"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:textColor="@color/ch_color_4"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/ch_5"
                android:textColor="@color/ch_color_5"/>

            <SeekBar
                android:id="@+id/seekBar_red"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:indeterminate="false"
                android:progress="100"
                android:progressDrawable="@drawable/seekbar_progress_red" />

            <TextView
                android:id="@+id/tv_value_sb_red"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:textColor="@color/ch_color_5"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
