<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    android:background="@drawable/bg_item_group"
    android:minHeight="@dimen/app_item_hight"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_deviceGroupPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/app_margin_xl" />

    <TextView
        android:id="@+id/iv_deviceGroupNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="10"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_control"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="@dimen/app_item_width"
        android:layout_marginRight="@dimen/app_margin_m"
        android:background="@drawable/btn_no_radius"
        android:focusable="false"
        android:gravity="center"
        android:paddingLeft="@dimen/app_padding_m"
        android:paddingRight="@dimen/app_padding_m"
        android:text="@string/device_control"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>