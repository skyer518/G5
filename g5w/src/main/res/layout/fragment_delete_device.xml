<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@mipmap/bg_control">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/app_padding_m"
            android:layout_weight="1"
            android:background="@drawable/bg_panel_radius"
            android:orientation="vertical">

            <ExpandableListView
                android:id="@+id/elv_can_delete_devices"
                android:layout_width="match_parent"
                android:layout_weight="10"
                android:layout_height="match_parent">
            </ExpandableListView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/sb_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tv_btn_ok"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_radius_leftbottom"
                    android:gravity="center"
                    android:minHeight="@dimen/app_item_hight"
                    android:enabled="false"
                    android:padding="0dp"
                    android:text="@string/device_dialog_button_delete" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/app_item_hight"
                    android:background="@color/sb_gray" />

                <Button
                    android:id="@+id/tv_btn_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_radius_rightbottom"
                    android:gravity="center"
                    android:minHeight="@dimen/app_item_hight"
                    android:padding="0dp"
                    android:text="@string/device_wifi_dialog_button_cancel" />
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>


</FrameLayout>
