<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:minHeight="@dimen/app_item_hight"
    android:orientation="horizontal"
    android:padding="@dimen/app_padding_m">

    <CheckBox
        android:id="@+id/cb_itemChecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false" />

    <ImageView
        android:id="@+id/iv_devicePic"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="@dimen/app_margin_l"
        android:layout_marginRight="@dimen/app_margin_l"
        android:src="@mipmap/led" />

    <TextView
        android:id="@+id/tv_deviceNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/app_margin_m" />
</LinearLayout>